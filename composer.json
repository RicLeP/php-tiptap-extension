{
    "name": "storyblok/tiptap-bundle",
    "type": "symfony-bundle",
    "description": "Tiptap extensions for Storyblok integration",
    "license": "MIT",
    "authors": [
        {
            "name": "Edoardo Dusi",
            "email": "edo@edoardodusi.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "symfony/framework-bundle": "^6.0|^7.0",
        "thecodingmachine/safe": "^2.0 || ^3.0",
        "ueberdosis/tiptap-php": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "Storyblok\\TiptapBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Storyblok\\TiptapBundle\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.65",
        "phpstan/phpstan" : "^2.1",
        "pestphp/pest": "^3.7",
        "rector/rector": "^2"
    },
    "scripts": {
        "static-code": "vendor/bin/phpstan analyse src/",
        "style-fix-code": "export PHP_CS_FIXER_IGNORE_ENV=1; vendor/bin/php-cs-fixer fix --rules=@PER-CS2.0 src/",
        "style-check-code": "export PHP_CS_FIXER_IGNORE_ENV=1; vendor/bin/php-cs-fixer check --rules=@PER-CS2.0 src/",
        "test-code": "vendor/bin/pest",
        "test-code-ci": "vendor/bin/pest -c . --ci --cache-directory ./tmp",
        "refactor-check-code": "vendor/bin/rector --dry-run",
        "test-coverage": "vendor/bin/pest --configuration=phpunit.xml.dist --coverage-html .build/html",
        "all-checks": [
            "@style-check-code",
            "@static-code",
            "@refactor-check-code",
            "@test-code"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable"
}
